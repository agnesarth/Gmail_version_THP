<div class="container-fluid">
  <h1>Boîte de réception</h1><br/>
  <div class = "row">
    <div class="col-5">
      <table class="table table-striped">
        <thead>
          <tr class="bg-primary text-white text-center">
            <th scope="col">#</th>
            <th scope="col" class="col-4">Emails reçus</th>
          </tr>
        </thead>
        <tbody>
          <% @emails.each do |email|  %>
            <tr>
              <th scope="row"><%= email.id %></th>
              <td><%= email.object %></td>
            </tr>
          <%end%>
        </tbody>
      </table>
    </div>

    <div class="col-7">
      <table class="table table-striped">
        <thead>
          <tr class="bg-primary text-white text-center">
            <th scope="col">Objet de l'email</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>Contenu de l'email</td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <% @emails.each do |email|  %>
    <li>
      <%= email.object %>,
      "Contenu : " <%=  email.body %>
    </li>
  <% end %>
</div>